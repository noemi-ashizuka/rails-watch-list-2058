<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1598899134739-24c46f58b8c0?q=80&w=2956&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-3">
  <div class="row">
    <div class="col-9">
      <div class="cards">
        <% @list.bookmarks.each do |bookmark| %>
          <%= render 'bookmarks/card', bookmark: bookmark %>
        <% end %>
      </div>

    </div>
    <div class="col-3">
      <%= render 'bookmarks/form' %>
    </div>
  </div>

  <%= link_to root_path, class: "btn btn-warning mt-3" do %>
    <i class="fa-solid fa-house"></i>
  <% end %>

</div>
